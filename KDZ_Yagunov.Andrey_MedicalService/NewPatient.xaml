<Window x:Class="KDZ_Yagunov.Andrey_MedicalService.NewPatient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KDZ_Yagunov.Andrey_MedicalService"
        mc:Ignorable="d"
        Title="NewPatient" Height="300" Width="300">
    <Grid>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="30" Margin="32,23,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" Width="232"/>
        <TextBox x:Name="textBox1" HorizontalAlignment="Left" Height="30" Margin="32,68,0,0" TextWrapping="Wrap" Text="Age" VerticalAlignment="Top" Width="232"/>
        <TextBox x:Name="textBox2" HorizontalAlignment="Left" Height="30" Margin="32,112,0,0" TextWrapping="Wrap" Text="Status" VerticalAlignment="Top" Width="232"/>
        <TextBox x:Name="textBox3" HorizontalAlignment="Left" Height="30" Margin="32,156,0,0" TextWrapping="Wrap" Text="Diagnosis" VerticalAlignment="Top" Width="232"/>
        <Button x:Name="button" Content="Add new Patient" HorizontalAlignment="Left" Height="30" Margin="32,207,0,0" VerticalAlignment="Top" Width="232"/>

    </Grid>
</Window>
