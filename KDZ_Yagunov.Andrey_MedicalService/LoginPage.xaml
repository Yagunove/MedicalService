<Page x:Class="KDZ_Yagunov.Andrey_MedicalService.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KDZ_Yagunov.Andrey_MedicalService"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="400"
      Title="LoginPage">

    <Grid>
        <TextBox x:Name="textBoxLogin" HorizontalAlignment="Left" Height="24" Margin="22,37,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="355"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Height="22"  VerticalAlignment="Top" Width="355" Margin="22,80,0,0"/>
        <Button x:Name="buttonLogin" Content="Login" HorizontalAlignment="Left" VerticalAlignment="Top" Width="355" Margin="22,118,0,0" Click="buttonLogin_Click" Height="65"/>
        <Button x:Name="buttonWhy" Content="Почему мы перешли к постраничной навигации?" HorizontalAlignment="Left" Height="36" Margin="22,207,0,0" VerticalAlignment="Top" Width="355" Click="buttonWhy_Click"/>

    </Grid>
</Page>
